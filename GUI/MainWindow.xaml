<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="_Open..." Click="MenuItem_Open_Click" />
                    <MenuItem Header="_Run" Click="MenuItem_Run_Click" Name="mnuRun" IsEnabled="False" />
                    <MenuItem Header="E_xit" Click="MenuItem_Exit_Click" />
                </MenuItem>
            </Menu>
            <ListBox DockPanel.Dock="Right" Name="lstHex" />
            <ListBox DockPanel.Dock="Left" Name="lstISA" />
        </DockPanel>
        
    </Grid>
</Window>
